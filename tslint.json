{
  "defaultSeverity": "error",
  "extends": "tslint:recommended",
  "linterOptions": {
    "exclude": [
      "package.json"
    ]
  },
  "jsRules": {},
  "rules": {
    "array-type": false,
    "interface-name": [ true,
      "never-prefix"
    ],
    "no-namespace": false,
    "object-literal-sort-keys": false,
    "trailing-comma": false,
    "variable-name": [ true, 
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "ordered-imports":false,
    "no-var-requires":false
    
  },
  "rulesDirectory": []
}
